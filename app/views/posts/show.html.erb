<div class="shadow p-5 mb-5 bg-light rounded">
  <div class="text-center mb-5">
    <h1><%= @post.title %></h1>

  <p class="text-muted">
    <strong>By <%= @post.author %></strong><br>
    <%= l @post.created_at, format: :long %>
  </p>
  </div>  

  <div class="px-5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>  
</div>