<div class="shadow p-5 mb-5 bg-light rounded">
  <div class="text-center mb-5">
    <h1><%= @post.title %></h1>

  <p class="text-muted">
    <strong>By <%= @post.author %></strong><br>
    <%= l @post.created_at, format: :long %>
  </p>
  </div>  

  <div class="px-5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>  
</div>

<div class="m-5">
  <div class="text-center">
    <h4>
      <%= pluralize(@post.comments.count, 'comment') %>
      <span class="badge badge-success">Make a comment!</span>
    </h4>
  </div>

  <%= form_with model: @comment, local: true do |form| %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

  
  <%= form.submit class: 'btn btn-primary', data: {disable_with: 'Creating...'} %>
  <% end %>
</div>