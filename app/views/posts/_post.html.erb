<div class="card bg-light mb-1">
  <div class="card-body">
    <h4><%= link_to post.title, post %></h4>

    <div class="text-muted mb-2">
      <em>By <%= post.author %> (<%= l post.created_at, format: :long %>)</em>
    </div>

    <p><%= post.body.truncate(200) %></p>

    <p class="text-muted"><%= pluralize(post.comments.count, 'comment') %></p>

    <%= link_to 'Read article', post, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
    <%= link_to 'Delete', post, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'} %>
  </div>
</div>