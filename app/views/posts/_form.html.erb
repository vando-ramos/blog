<%= form_with(model: post, local: true) do |form| %>  
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control shadow-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control shadow-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control shadow-lg', rows: 5 %>
  </div>
  
  <%= form.submit class: 'btn btn-primary', data: {disable_with: 'Creating...'} %>    
<% end %>